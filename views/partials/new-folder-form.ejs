<form
  action="/folder/create"
  method="post"
  data-name="folder-form"
  class="flex-column folder-form"
>
  <button class="close-btn" data-name="close-form">X</button>
  <label for="folderName">Folder Name</label>
  <input
    type="text"
    name="folderName"
    id="folderName"
    required
    placeholder="Enter here"
  />
  <span class="err-msg">x</span>
  <button type="submit">Submit</button>
</form>
